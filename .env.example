# DataRatiba Healthcare Systems Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="DataRatiba"
APP_DEBUG=false
APP_ENCODING="UTF-8"
APP_DEFAULT_LOCALE="en_US"
APP_DEFAULT_TIMEZONE="UTC"

# Security
SECURITY_SALT="your-security-salt-here-32-characters-minimum"

# Database Configuration
DATABASE_URL="mysql://username:password@localhost/database_name"
# Example: mysql://root:password@localhost/datatatiba

# Email Configuration (if using SMTP)
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USERNAME="your-email@example.com"
EMAIL_PASSWORD="your-email-password"
EMAIL_TLS=true

# Cache Configuration
CACHE_DEFAULT_URL="file://tmp/cache/?prefix=app_default&serialize=true&timeout=3600"

# Session Configuration
SESSION_DEFAULTS="php"

# Mailer Configuration
EMAIL_TRANSPORT_DEFAULT_URL="mail://localhost"

# Production Settings
# Set to 'production' in production environment
CAKE_ENV=development